<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_photo"
        android:layout_width="75dp"
        android:layout_height="75dp" />

    <TextView
        android:id="@+id/nameUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_photo"
        android:paddingStart="16dp"
        android:text="@string/sampleName"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/usernameUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameUser"
        android:layout_toEndOf="@id/img_photo"
        android:paddingStart="16dp"
        android:text="@string/sampleUsername"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/locationUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameUser"
        android:layout_toEndOf="@id/img_photo"
        android:paddingStart="16dp"
        android:text="@string/sampleLocation"
        tools:ignore="RtlSymmetry" />

</RelativeLayout>